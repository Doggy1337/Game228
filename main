 	switch (ur_class)
 	{
 	case 1:
		max_hp=200
 		hp=200;
 		dmg=20;
 		mana=20;
		max_mana=20;
 		dodge=10;
 		crit_chance=20;
 		break;
 	case 2:
		max_hp=100
 		hp=100;
 		dmg=10;
 		mana=200;
		max_mana=200;
 		dodge=20;
 		crit_chance=10
 		break;
 	case 3:
		max_hp=60
 		hp=60;
 		dmg=20;
 		mana=60;
		max_mana=60;
 		dodge=40;
 		crit_chance=40
 	default:
	 	cout<<"Âû øòî, ÷èòàòü íå óìååòå?!?!??!?!? \n Áóäåòå èãðàòü çà ëîõà!!!! \n
		max_hp=20
	 	hp=20
	 	dmg=1
	 	mana=10
		max_mana=10;
	 	dodge=2
	 	crit_chance=2
 	}
 	cout<<"Âû âûáðàëè ñâîé êëàññ \n";
	while (hp>0)
	{
		cout<<"×òî áóäåòå äåëàòü? 1 - ïîéòè äàëüøå, 2 - ïîïðîáîâàòü îòäîõíóòü â òåêóùåé êîìíàòå \n";
		cin>>pass;
		chance=(rand()%(20)+1)+room
		switch (pass)
		{
			case 1:
				if (chance<=10)
				{
						while (hp>0&&monster_hp>0) \\битва с кобольдом
						{	
							monster_hp=20
							monster_dmg=5;
							chance=rand()%(100)+1;
							if (dodge>=chance)
							{
								monster_dmg=0;
								cout<<"Вы увернулись \n";
							}
							chance=rand()%(100)+1;
							if (crit_chance>=chance)
							{
								dmg=dmg*2;
								cout<<"Критический удар \n";
							}
							cout<<"Вы нанесли кобольду "<<dmg<<" урона. У кобольда осталось "<<monster_hp<<" здоровья \n";
							cout<<"Кобольд нанес "<<monster_dmg<<" урона. У вас осталось "<<hp<<" здоровья \n";
							if (monster_hp==0)
							{
								cout<<"Вы победили! \n";
							}
							else
							{
								cout<<"Вы долбань! \n";
							}
						}	
					}
				}
				if (chance>10 && chance<==20)
				{
					cout<<"Вы встретили гоблина. Он даун и заагрился на вас. \n"; \\битва с гоблином
						while (hp>0&&monster_hp>0)
						{
							monster_hp=35;
							monster_dmg=10;
							chance=rand()%(100)+1;
							if (dodge>=chance)
							{
								monster_dmg=0;
								cout<<"Вы увернулись \n";
							}
							chance=rand()%(100)+1;
							if (crit_chance>=chance)
							{
								dmg=dmg*2;
								cout<<"Критический удар \n";
