#include<iostream>
#include<cstdlib>
#include<ctime>
using namespace std;
int main()
{

	srand(time(NULL));
	setlocale(0,"");
	int hp, max_hp, dmg, ur_class, mana, max_mana, dodge, crit_chance;
	int chance, room;
	int monster_dmg, monster_hp;
	room=0;
