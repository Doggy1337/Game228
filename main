							{
								cout<<"Вы победили! \n";
							}
							else
							{
								cout<<"Вы долбань! \n";
							}
						}	
				}
				if (chance>15)
				{
					if ((max_hp-hp)<(hp+hp*0.2))
					{
						hp=max_hp;
					}
					else
					{
						hp=hp+hp*0.2;
					}
					mana=max_mana;
					cout<<"Вы хорошо отдохнули и восстановили свое здоровье и ману. Теперь у вас "<<hp<<" хп и "<<mana<<" маны. \n"
				}
		}
	}
	return 0;
}

